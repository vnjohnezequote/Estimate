<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <!-- Color -->
        <ResourceDictionary Source="DarkColor.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <!-- Grid Splitter Style -->
    <Style x:Key="DarkGridSplitter" TargetType="{x:Type GridSplitter}">
        <Setter Property="Background" Value="{StaticResource BlackBackGround}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="-3,-3,-3,-3"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryBlue500}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="DarkBorder" TargetType="Border">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="{StaticResource BlackBackGround}"/>
    </Style>
    
</ResourceDictionary>