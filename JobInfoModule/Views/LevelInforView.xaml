<UserControl x:Class="JobInfoModule.Views.LevelInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobInfoModule.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:JobInfoModule.ViewModels"
             xmlns:interactions="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/shared"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:materialDesignExtention="clr-namespace:MaterialDesignExtensions.Controls;assembly=MaterialDesignExtensions"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:LevelInfoViewModel, IsDesignTimeCreatable=True}"
             Style="{DynamicResource MaterialDesignUserControl}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AppThemes;component/DarkTheme/UserControlStyle.xaml"/>
                <ResourceDictionary>
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                    <!--<Style TargetType="TabItem" >
						<Setter Property="Header" Value="{Binding DataContext.Level.LevelName}" />
					</Style>-->
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel x:Name="LevelRoot">
	<!-- Wall Spacing Infor-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox materialDesign:HintAssist.Hint="Load Bearing Wall Spacing"
                     Text="{Binding Job.JobDefault.ExternalWallSpacing, TargetNullValue={x:Static sys:String.Empty}}"/>
            <TextBox materialDesign:HintAssist.Hint="None Load Bearing Wall Spacing"
                     Grid.Column="1"
                     Text="{Binding Job.JobDefault.InternalWallSpacing, TargetNullValue={x:Static sys:String.Empty}}"/>
        </Grid>
        <materialDesign:Card>
            <ListBox Style="{DynamicResource MaterialListBox}"
                     x:Name="LevelNumberRoot"
                     SelectedIndex="{Binding SelectedIndex}">
                <interactions:Interaction.Triggers>
                    <interactions:EventTrigger EventName="SelectionChanged">
                        <interactions:InvokeCommandAction Command="{Binding CreateFloorCommand}"
                                                          CommandParameter="{Binding ElementName= LevelNumberRoot}"/>
                    </interactions:EventTrigger>
                </interactions:Interaction.Triggers>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBoxItem Content="1 Level" Name="Level1"/>
                <ListBoxItem Content="2 Level" Name="Level2"/>
                <ListBoxItem Content="3 Level" Name="Level3"/>
                <ListBoxItem Content="4 Level" Name="Level4"/>
                <ListBoxItem Content="5 Level" Name="Level5"/>
                <ListBoxItem Content="6 Level" Name="Level6"/>
                <ListBoxItem Content="7 Level" Name="Level7"/>
            </ListBox>
        </materialDesign:Card>
        <StackPanel Visibility="{Binding IsCostVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl prism:RegionManager.RegionManager="{Binding RegionManager}"
                          prism:RegionManager.RegionName="DeliveryRegion"/>
        </StackPanel>
        <!-- Floor Infor -->
        <TabControl prism:RegionManager.RegionManager="{Binding RegionManager}"
                    prism:RegionManager.RegionName="FloorInfoRegion"
                    Style="{StaticResource MaterialDesignTabControlCustom}"
                    materialDesignExtention:TabControlAssist.TabHeaderHorizontalAlignment="Left">
            <TabControl.Resources>
                <ResourceDictionary>
                    <Style TargetType="TabItem" BasedOn="{StaticResource MaterialDesignTabItem}">
						<Setter Property="Header" Value="{Binding DataContext.Level.LevelName}" />
					</Style>
                </ResourceDictionary>
            </TabControl.Resources>
        </TabControl>
        <!-- Step Down -->
        <DockPanel>
            <materialDesign:ColorZone Mode="PrimaryMid"
                                          VerticalAlignment="Stretch">
                <Label>Step Down</Label>
            </materialDesign:ColorZone>
            <StackPanel>
                <TextBox materialDesign:HintAssist.Hint="Garage Step Down" Text="{Binding Job.JobDefault.StepDown}"/>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</UserControl>
