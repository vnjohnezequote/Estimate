<UserControl x:Class="JobInfoModule.Views.FloorInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobInfoModule.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:JobInfoModule.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance viewModels:FloorInfoViewModel, IsDesignTimeCreatable=True}"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:interactions="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Style="{DynamicResource MaterialDesignUserControl}">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/AppThemes;component/DarkTheme/UserControlStyle.xaml"/>
    </UserControl.Resources>
    <!--Basement -->
    <StackPanel>
        <DockPanel>
            <materialDesign:ColorZone Mode="PrimaryMid">
                <Label Content="{Binding Level.LevelName}"/>
            </materialDesign:ColorZone>
            <materialDesign:ColorZone Mode="Accent">
                <TextBlock Text="{Binding Level.TotalWallLength}" />
            </materialDesign:ColorZone>
        </DockPanel>
        <DockPanel>
            <Label Content="External"/>
            <StackPanel>
                <TextBox materialDesign:HintAssist.Hint="Height" Text="{Binding Level.LevelInfo.ExternalWallHeight, TargetNullValue={x:Static sys:String.Empty}}">
                    <interactions:Interaction.Triggers>
                        <interactions:EventTrigger EventName="LostFocus">
                            <interactions:InvokeCommandAction Command="{Binding ExteralWallHeightChangedCommand}"/>
                        </interactions:EventTrigger>
                    </interactions:Interaction.Triggers>
                </TextBox>
                <TextBox materialDesign:HintAssist.Hint="Thickness" Text="{Binding Level.LevelInfo.ExternalWallThickness, TargetNullValue={x:Static sys:String.Empty}}"/>
            </StackPanel>
        </DockPanel>
        <DockPanel>
            <Label Content="Internal"/>
            <StackPanel>
                <TextBox materialDesign:HintAssist.Hint="Height" Text="{Binding Level.LevelInfo.InternalWallHeight, TargetNullValue={x:Static sys:String.Empty}}"/>
                <TextBox materialDesign:HintAssist.Hint="Thickness" Text="{Binding Level.LevelInfo.InternalWallThickness, TargetNullValue={x:Static sys:String.Empty}}"/>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</UserControl>
