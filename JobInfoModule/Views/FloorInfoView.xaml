<UserControl x:Class="JobInfoModule.Views.FloorInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobInfoModule.Views"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:JobInfoModule.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance viewModels:FloorInfoViewModel, IsDesignTimeCreatable=True}"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:interactions="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             Style="{DynamicResource MaterialDesignUserControl}" Margin="0 10 0 0"
             Padding="20 0 20 0">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/AppThemes;component/DarkTheme/UserControlStyle.xaml"/>
    </UserControl.Resources>
    <!--Basement -->
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <materialDesign:ColorZone Mode="PrimaryMid">
                <Label Content="{Binding Level.LevelName}" Width="114"/>
            </materialDesign:ColorZone>
            <materialDesign:ColorZone Mode="Accent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1">
                <TextBlock Text="{Binding Level.TotalWallLength}" Padding="10 0 0 0"/>
            </materialDesign:ColorZone>
        </Grid>
        <DockPanel Margin="0 10 0 0" HorizontalAlignment="Left">
                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>-->
                <TextBox materialDesign:HintAssist.Hint="Wall2D Height"
                         materialDesign:HintAssist.IsFloating="True"
                         Text="{Binding Level.LevelInfo.WallHeight}"
                         TextChanged="NumericTextBoxTextChanged"/>
                <ComboBox Name="ExtLevelCmb"
                          materialDesign:HintAssist.Hint="Load Bearing Wall2D Spacing"
                          materialDesign:HintAssist.IsFloating="True"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          ItemsSource="{Binding WallSpacings}"
                          Padding="5"
                          Margin="10 0 0 0"
                          SelectedItem="{Binding Level.LevelInfo.ExternalWallSpacing}"
                          Text="{Binding Level.LevelInfo.ExternalWallSpacing}"/>
                <!--Hack Textbox Reset-->
                <TextBox Name="HackLevelLbwCmb"
                         TextChanged="NumericTextBoxTextChanged" 
                         Visibility="Collapsed"
                         Text="{Binding ElementName=ExtLevelCmb, Path=Text,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                <ComboBox Name="IntLevelCmb"
                          materialDesign:HintAssist.Hint="None Load Bearing Wall2D Spacing"
                          materialDesign:HintAssist.IsFloating="True"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          Padding="5"
                          ItemsSource="{Binding WallSpacings}"
                          Margin="10 0 0 0"
                          SelectedItem="{Binding Level.LevelInfo.InternalWallSpacing}"
                          Text="{Binding Level.LevelInfo.InternalWallSpacing}"/>
                <!--Hack Textbox Reset-->
                <TextBox Name="HackLevelNLbwCmb"
                         Visibility="Collapsed"
                         TextChanged="NumericTextBoxTextChanged" 
                         Text="{Binding ElementName=IntLevelCmb, Path=Text,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

        </DockPanel>
        <DockPanel Margin="0 10 0 0" HorizontalAlignment="Left">
            <TextBox materialDesign:HintAssist.Hint="External Wall2D Thickness"
                         materialDesign:HintAssist.IsFloating="True"
                         Text="{Binding Level.LevelInfo.ExternalWallThickness}"
                         TextChanged="NumericTextBoxTextChanged"/>
            <TextBox materialDesign:HintAssist.Hint="Internal Wall2D Thickness"
                     Margin="10 0 0 0"
                     materialDesign:HintAssist.IsFloating="True"
                     Text="{Binding Level.LevelInfo.InternalWallThickness}"
                     TextChanged="NumericTextBoxTextChanged"/>

        </DockPanel>
        <Border
            Background="{DynamicResource MaterialDesignDivider}"
            Height="1"
            Margin="0 10 0 0"
            HorizontalAlignment="Stretch"
            SnapsToDevicePixels="True" />
        <StackPanel Margin="0 10 0 0">
            <Expander Header="{Binding Level.LevelNameInfo}" IsExpanded="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="1"/>
                            <RowDefinition/>
                            <RowDefinition Height="1"/>
                            <RowDefinition/>
                            <RowDefinition Height="1"/>
                            <RowDefinition/>
                            <RowDefinition Height="1"/>
                            <RowDefinition/>
                            <RowDefinition Height="1"/>
                            <RowDefinition/>
